            app:popEnterAnim="@anim/nav_slide_in_left"
            app:destination="@id/navigation_slider2" />
        <action
            android:id="@+id/action_slider1_to_slider3"
            app:popUpTo="@id/navigation_slider1"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_slide_in_left"
            app:exitAnim="@anim/nav_slide_out_right"
            app:popExitAnim="@anim/nav_slide_out_left"
            app:popEnterAnim="@anim/nav_slide_in_right"
            app:destination="@id/navigation_slider3" />
        <action
            android:id="@+id/action_slider1_to_login"
            app:popUpTo="@id/navigation_slider1"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popExitAnim="@anim/fade_in"
            app:popEnterAnim="@anim/fade_out"
            app:destination="@id/navigation_login" />
        <action
            android:id="@+id/action_slider1_to_register"
