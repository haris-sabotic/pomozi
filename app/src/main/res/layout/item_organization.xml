<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_organization_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_rewards_background"
    android:clipToPadding="false"
    android:clipToOutline="true"
    android:layout_marginBottom="10dp"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/item_organization_photo"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:src="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_organization_text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextMedium"
        android:text="Crveni krst"
        android:textAllCaps="true"
        android:textColor="#31343D"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_organization_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="20dp" />

    <TextView
        android:id="@+id/item_organization_text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crveni krst Crne Gore je jedinstvena, nezavisna i dobrovoljna humanitarna organizacija koja djeluje na teritoriji Crne Gore, kao jedino priznato nacionalno društvo Crvenog krsta u državi."
        android:textColor="#31343D"
        android:textSize="12sp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_organization_text_title"
        android:paddingHorizontal="20dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_rectangle"
        android:padding="7dp"
        android:elevation="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_organization_photo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>