<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_swipe_refresh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_header_text_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pomozi#"
                android:textColor="@color/gray_text_2"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/home_header_text_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Početna"
                android:textColor="@color/red_on_cool_blue_gray"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/home_header_text_app"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/home_text_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:text="Jer biti human se isplati!"
                android:textSize="24sp"
                android:textColor="@color/red_on_cool_blue_gray"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_header_text_screen" />

            <TextView
                android:id="@+id/home_text_organization_list"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Lista organizacija"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/red_slightly_rounded_rectangle"
                android:elevation="10dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_text_header" />

            <TextView
                android:id="@+id/home_text_leaderboard"
                android:layout_width="170dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Rang Lista"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/red_slightly_rounded_rectangle"
                android:elevation="10dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_text_organization_list"
                app:layout_constraintBottom_toBottomOf="@id/home_text_organization_list" />

            <TextView
                android:id="@+id/home_text_donations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:text="Donacije!"
                android:textSize="22sp"
                android:textColor="@color/red_on_cool_blue_gray"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_text_organization_list" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_donation_primary_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:elevation="10dp"
                android:clipToOutline="true"
                android:background="@drawable/white_more_rounded_rectangle"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/home_text_donations">
                <ImageView
                    android:id="@+id/home_donation_primary_background"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/home_card_background_1"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="0dp"
                    android:layout_marginTop="-25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_primary_background">
                    <ImageView
                        android:id="@+id/home_donation_primary_photo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/default_user"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/home_donation_primary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBlack"
                    android:text="DONACIJA DANA"
                    android:textSize="18sp"
                    android:textColor="@color/red_on_cool_blue_gray"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_primary_background" />

                <TextView
                    android:id="@+id/home_donation_primary_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TextMedium"
                    android:layout_marginTop="-8dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/red_on_cool_blue_gray"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_primary_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_donation_left_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:clipToOutline="true"
                android:background="@drawable/white_more_rounded_rectangle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_donation_right_layout"
                app:layout_constraintBottom_toBottomOf="@id/home_donation_right_layout"
                app:layout_constraintTop_toBottomOf="@id/home_donation_primary_layout">
                <ImageView
                    android:id="@+id/home_donation_left_background"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/home_card_background_2"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="0dp"
                    android:layout_marginTop="-25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_left_background">
                    <ImageView
                        android:id="@+id/home_donation_left_photo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/default_user"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/home_donation_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBold"
                    android:textSize="14sp"
                    android:textColor="@color/red_on_cool_blue_gray"
                    android:layout_marginTop="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_left_background" />

                <TextView
                    android:id="@+id/home_donation_left_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TextMedium"
                    android:layout_marginTop="-8dp"
                    android:textSize="12sp"
                    android:textColor="#31343D"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_left_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_donation_right_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:clipToOutline="true"
                android:background="@drawable/white_more_rounded_rectangle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_donation_left_layout"
                app:layout_constraintBottom_toBottomOf="@id/home_donation_left_layout"
                app:layout_constraintTop_toBottomOf="@id/home_donation_primary_layout">
                <ImageView
                    android:id="@+id/home_donation_right_background"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/home_card_background_2"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="0dp"
                    android:layout_marginTop="-25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_right_background">
                    <ImageView
                        android:id="@+id/home_donation_right_photo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/default_user"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/home_donation_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBold"
                    android:textSize="14sp"
                    android:textColor="@color/red_on_cool_blue_gray"
                    android:layout_marginTop="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_right_background" />

                <TextView
                    android:id="@+id/home_donation_right_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TextMedium"
                    android:layout_marginTop="-8dp"
                    android:textSize="12sp"
                    android:textColor="#31343D"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_donation_right_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/home_text_actions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:text="Akcije kojima možete donirati!"
                android:textSize="22sp"
                android:textColor="@color/red_on_cool_blue_gray"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_donation_left_layout" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_viewpager_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                app:layout_constraintTop_toBottomOf="@id/home_text_actions"
                android:layout_marginTop="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>