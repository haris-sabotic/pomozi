<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/register_header_text_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pomozi#"
        android:textColor="@color/gray_text_2"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/register_header_text_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/red_on_cool_blue_gray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/register_header_text_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/register_header_text_app"
        app:layout_constraintBottom_toBottomOf="@id/register_header_text_screen"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/register_header_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/black"
            android:background="@color/white"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/register_text_donate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Donirajte ogranizacijama!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/red_on_cool_blue_gray"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/home_edittext_search"
        app:layout_constraintEnd_toEndOf="@id/home_edittext_search"
        app:layout_constraintTop_toBottomOf="@id/register_header_text_screen" />

    <EditText
        android:id="@+id/home_edittext_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:textColor="@color/cool_blue_gray"
        android:textColorHint="@color/input_text_color"
        android:textSize="14sp"
        android:hint="PretraÅ¾ite organizacije"
        android:inputType="text"
        android:drawableStart="@drawable/search"
        android:drawablePadding="15dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/register_text_donate"
        app:layout_constraintStart_toStartOf="@id/home_img_banner"
        app:layout_constraintEnd_toEndOf="@id/home_img_banner"
        />

    <ImageView
        android:id="@+id/home_img_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/home_banner"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="-60dp"
        app:layout_constraintTop_toBottomOf="@id/home_edittext_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_img_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>