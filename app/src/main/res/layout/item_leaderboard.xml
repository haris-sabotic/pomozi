<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:background="@drawable/white_rounded_rectangle"
    android:elevation="10dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/item_leaderboard_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMedium"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        android:text="4"
        android:textSize="16sp"
        android:textColor="#2E2D2E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_leaderboard_photo_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toEndOf="@id/item_leaderboard_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/item_leaderboard_photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@color/black"
            android:background="@color/white"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_leaderboard_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextMedium"
        android:layout_marginTop="5dp"
        android:text="Marsha Fisher"
        android:textSize="16sp"
        android:textColor="#2E2D2E"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintStart_toEndOf="@id/item_leaderboard_photo_parent"
        app:layout_constraintEnd_toStartOf="@id/item_leaderboard_amount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_leaderboard_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="289â‚¬"
        android:textSize="16sp"
        android:textColor="#2E2D2E"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>