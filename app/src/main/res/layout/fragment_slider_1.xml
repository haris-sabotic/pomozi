<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/slider_1_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_1_pattern"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_1_item_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_1_item_2"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_1_item_3"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:text="Donirajte stvari koje vam ne trebaju putem naÅ¡e aplikacije"
        android:textSize="36sp"
        android:textColor="@color/cool_blue_gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/slider_1_button_register"
        android:layout_marginBottom="55dp"
        />

    <FrameLayout
        android:id="@+id/slider_1_button_register"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_register_button_background"
        android:paddingVertical="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/slider_1_button_login"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registruj se"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/slider_1_button_login"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_login_button_background"
        android:paddingVertical="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/slider_1_button_register"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prijavi se"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>