<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/activity_main_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/mobile_navigation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/activity_main_nav_home"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home"
            app:tint="@color/red_on_cool_blue_gray"
            android:layout_marginVertical="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_main_nav_rewards"
            />
        <View
            android:id="@+id/activity_main_nav_home_active_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/red_on_cool_blue_gray"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_home"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_home"
            />
        <View
            android:id="@+id/activity_main_nav_home_overlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/activity_main_nav_home"
            app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_home"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_home"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_home"
            />

        <ImageView
            android:id="@+id/activity_main_nav_rewards"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/rewards"
            android:layout_marginVertical="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_main_nav_home"
            app:layout_constraintEnd_toStartOf="@id/activity_main_nav_map"
            />
        <View
            android:id="@+id/activity_main_nav_rewards_active_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/red_on_cool_blue_gray"
            android:visibility="invisible"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_rewards"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_rewards"
            />
        <View
            android:id="@+id/activity_main_nav_rewards_overlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/activity_main_nav_rewards"
            app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_rewards"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_rewards"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_rewards"
            />

        <ImageView
            android:id="@+id/activity_main_nav_map"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/map"
            android:layout_marginVertical="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_main_nav_rewards"
            app:layout_constraintEnd_toStartOf="@id/activity_main_nav_profile"
            />
        <View
            android:id="@+id/activity_main_nav_map_active_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/red_on_cool_blue_gray"
            android:visibility="invisible"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_map"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_map"
            />
        <View
            android:id="@+id/activity_main_nav_map_overlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/activity_main_nav_map"
            app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_map"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_map"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_map"
            />

        <ImageView
            android:id="@+id/activity_main_nav_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/user"
            android:layout_marginVertical="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_main_nav_map"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/activity_main_nav_profile_active_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/red_on_cool_blue_gray"
            android:visibility="invisible"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_profile"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_profile"
            />
        <View
            android:id="@+id/activity_main_nav_profile_overlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/activity_main_nav_profile"
            app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_profile"
            app:layout_constraintStart_toStartOf="@id/activity_main_nav_profile"
            app:layout_constraintEnd_toEndOf="@id/activity_main_nav_profile"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>