<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_profile_activity_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/medal_bronze"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_profile_activity_text_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7â‚¬ donirano CRVENOM KRSTU"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/item_profile_activity_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_profile_activity_text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="May 1, 2023"
        android:textSize="15sp"
        android:textColor="#99151E23"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/item_profile_activity_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_profile_activity_text_main" />

</androidx.constraintlayout.widget.ConstraintLayout>