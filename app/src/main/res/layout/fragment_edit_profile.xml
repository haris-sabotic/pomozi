<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.edit_profile.EditProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/edit_profile_header_text_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pomozi#"
                android:textColor="@color/gray_text_2"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/edit_profile_header_text_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/red_on_cool_blue_gray"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_header_text_app"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_profile_photo_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_header_text_screen">
                <ImageView
                    android:id="@+id/edit_profile_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@color/black"
                    android:background="@color/white"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/edit_profile_icon_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:background="@drawable/white_circle"
                android:translationZ="2dp"
                android:outlineProvider="none"
                android:padding="10dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="-10dp"
                app:layout_constraintBottom_toBottomOf="@id/edit_profile_photo_parent"
                app:layout_constraintEnd_toEndOf="@id/edit_profile_photo_parent" />

            <TextView
                android:id="@+id/edit_profile_text_log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Izloguj se"
                android:textColor="#FB4E4E"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_photo_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ime i prezime"
                android:textColor="@color/cool_blue_gray"
                android:textSize="14sp"
                android:labelFor="@id/edit_profile_edittext_name"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="@id/edit_profile_edittext_name"
                app:layout_constraintBottom_toTopOf="@id/edit_profile_edittext_name" />
            <EditText
                android:id="@+id/edit_profile_edittext_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:textColor="@color/cool_blue_gray"
                android:inputType="text"
                android:autofillHints="name"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_photo_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/cool_blue_gray"
                android:textSize="14sp"
                android:labelFor="@id/edit_profile_edittext_email"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="@id/edit_profile_edittext_email"
                app:layout_constraintBottom_toTopOf="@id/edit_profile_edittext_email" />
            <EditText
                android:id="@+id/edit_profile_edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:textColor="@color/cool_blue_gray"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_edittext_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/cool_blue_gray"
                android:textSize="14sp"
                android:labelFor="@id/edit_profile_edittext_password"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="@id/edit_profile_edittext_password"
                app:layout_constraintBottom_toTopOf="@id/edit_profile_edittext_password" />
            <EditText
                android:id="@+id/edit_profile_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:textColor="@color/cool_blue_gray"
                android:inputType="textPassword"
                android:autofillHints="password"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_edittext_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefon"
                android:textColor="@color/cool_blue_gray"
                android:textSize="14sp"
                android:labelFor="@id/edit_profile_edittext_phone"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="@id/edit_profile_edittext_phone"
                app:layout_constraintBottom_toTopOf="@id/edit_profile_edittext_phone" />
            <EditText
                android:id="@+id/edit_profile_edittext_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:textColor="@color/cool_blue_gray"
                android:inputType="phone"
                android:autofillHints="password"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_edittext_password" />

            <TextView
                android:id="@+id/edit_profile_butt_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_fully_rounded_background"
                android:paddingHorizontal="80dp"
                android:paddingVertical="20dp"
                android:text="Sačuvaj promjene"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_edittext_phone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>