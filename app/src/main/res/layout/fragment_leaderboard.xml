<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leaderboard_swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.LeaderboardFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/leaderboard_pattern"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leaderboard_header_text_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomozi#"
            android:textColor="@color/gray_text_2"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/leaderboard_header_text_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rang Lista"
            android:textColor="@color/red_on_cool_blue_gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/leaderboard_header_text_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/leaderboard_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_rectangle"
            android:padding="7dp"
            android:elevation="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/leaderboard_header_text_app"
            app:layout_constraintBottom_toBottomOf="@id/leaderboard_header_text_screen">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="-1"
                android:src="@drawable/arrow_right" />
        </FrameLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leaderboard_top_three_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/leaderboard_header_text_screen">

            <androidx.cardview.widget.CardView
                android:id="@+id/leaderboard_photo_1_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/leaderboard_photo_1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/default_user"
                    android:background="@color/white"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/leaderboard_photo_2_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/leaderboard_photo_1_parent">
                <ImageView
                    android:id="@+id/leaderboard_photo_2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/default_user"
                    android:background="@color/white"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/leaderboard_photo_3_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/leaderboard_photo_1_parent">
                <ImageView
                    android:id="@+id/leaderboard_photo_3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/default_user"
                    android:background="@color/white"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/leaderboard_text_name_1"
                style="@style/TextBold"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_photo_1_parent"
                app:layout_constraintStart_toStartOf="@id/leaderboard_photo_1_parent"
                app:layout_constraintTop_toBottomOf="@id/leaderboard_photo_1_parent" />

            <TextView
                android:id="@+id/leaderboard_text_name_2"
                style="@style/TextBold"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_photo_2_parent"
                app:layout_constraintStart_toStartOf="@id/leaderboard_photo_2_parent"
                app:layout_constraintTop_toBottomOf="@id/leaderboard_photo_2_parent" />

            <TextView
                android:id="@+id/leaderboard_text_name_3"
                style="@style/TextBold"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_photo_3_parent"
                app:layout_constraintStart_toStartOf="@id/leaderboard_photo_3_parent"
                app:layout_constraintTop_toBottomOf="@id/leaderboard_photo_3_parent" />

            <TextView
                android:id="@+id/leaderboard_text_amount_1"
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2E2D2E"
                app:layout_constraintTop_toBottomOf="@id/leaderboard_text_name_1"
                app:layout_constraintStart_toStartOf="@id/leaderboard_text_name_1"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_text_name_1" />

            <TextView
                android:id="@+id/leaderboard_text_amount_2"
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2E2D2E"
                app:layout_constraintTop_toBottomOf="@id/leaderboard_text_name_2"
                app:layout_constraintStart_toStartOf="@id/leaderboard_text_name_2"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_text_name_2" />

            <TextView
                android:id="@+id/leaderboard_text_amount_3"
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2E2D2E"
                app:layout_constraintTop_toBottomOf="@id/leaderboard_text_name_3"
                app:layout_constraintStart_toStartOf="@id/leaderboard_text_name_3"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_text_name_3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crown_1"
                android:layout_marginBottom="-15dp"
                android:translationZ="100dp"
                app:layout_constraintBottom_toTopOf="@id/leaderboard_photo_1_parent"
                app:layout_constraintStart_toStartOf="@id/leaderboard_photo_1_parent"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_photo_1_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crown_2"
                android:layout_marginBottom="-12dp"
                android:translationZ="100dp"
                app:layout_constraintBottom_toTopOf="@id/leaderboard_photo_2_parent"
                app:layout_constraintStart_toStartOf="@id/leaderboard_photo_2_parent"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_photo_2_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crown_3"
                android:layout_marginBottom="-12dp"
                android:translationZ="100dp"
                app:layout_constraintBottom_toTopOf="@id/leaderboard_photo_3_parent"
                app:layout_constraintStart_toStartOf="@id/leaderboard_photo_3_parent"
                app:layout_constraintEnd_toEndOf="@id/leaderboard_photo_3_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leaderboard_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="15dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@drawable/white_rounded_rectangle_cutoff_bottom"
            android:elevation="20dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@id/leaderboard_top_three_layout"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>