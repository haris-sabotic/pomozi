<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_swipe_refresh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_header_text_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomozi#"
            android:textColor="@color/gray_text_2"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/profile_header_text_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textColor="@color/red_on_cool_blue_gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/profile_header_text_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_photo_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_header_text_screen">
            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/black"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/profile_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_photo_parent" />

        <TextView
            android:id="@+id/profile_text_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izmijeni profil"
            android:textColor="#00B3FF"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_text_name" />

        <TextView
            android:id="@+id/profile_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMACIJE"
            android:textColor="@color/red_on_cool_blue_gray"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile_text_activity"
            app:layout_constraintTop_toBottomOf="@id/profile_text_edit_profile" />

        <TextView
            android:id="@+id/profile_text_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AKTIVNOST"
            android:textColor="@color/gray_text_3"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/profile_text_info"
            app:layout_constraintEnd_toStartOf="@id/profile_text_rewards"
            app:layout_constraintTop_toBottomOf="@id/profile_text_edit_profile" />

        <TextView
            android:id="@+id/profile_text_rewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAGRADE"
            android:textColor="@color/gray_text_3"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/profile_text_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_text_edit_profile" />

        <View
            android:id="@+id/profile_underline_info"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@drawable/red_rounded_rectangle"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/profile_text_info"
            app:layout_constraintStart_toStartOf="@id/profile_text_info"
            app:layout_constraintEnd_toEndOf="@id/profile_text_info" />

        <View
            android:id="@+id/profile_underline_activity"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:visibility="gone"
            android:background="@drawable/red_rounded_rectangle"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/profile_text_activity"
            app:layout_constraintStart_toStartOf="@id/profile_text_activity"
            app:layout_constraintEnd_toEndOf="@id/profile_text_activity" />

        <View
            android:id="@+id/profile_underline_rewards"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:visibility="gone"
            android:background="@drawable/red_rounded_rectangle"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/profile_text_rewards"
            app:layout_constraintStart_toStartOf="@id/profile_text_rewards"
            app:layout_constraintEnd_toEndOf="@id/profile_text_rewards" />

        <ScrollView
            android:id="@+id/profile_scrollview_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_text_info">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:id="@+id/profile_info_money_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:background="@drawable/red_rounded_rectangle"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextBlack"
                        android:text="DONIRANO: "
                        android:textColor="@color/white"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/profile_info_money_text_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextBlack"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="26sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/profile_info_text_achievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOSTIGNUĆA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#9098A3"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_info_money_layout"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_info_text_achievements_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/16"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#9098A3"
                    android:alpha="0.5"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="@id/profile_info_text_achievements"
                    app:layout_constraintBottom_toBottomOf="@id/profile_info_text_achievements"
                    app:layout_constraintStart_toEndOf="@id/profile_info_text_achievements" />

                <ImageView
                    android:id="@+id/profile_info_arrow_achievemnts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintTop_toTopOf="@id/profile_info_text_achievements"
                    app:layout_constraintBottom_toBottomOf="@id/profile_info_text_achievements"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/profile_info_achievement_one_year"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/white_rounded_rectangle"
                    android:elevation="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_info_text_achievements"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:id="@+id/profile_info_achievement_one_year_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/achievement_one_year" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="1 godina"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_info_achievement_ten_donations"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/white_rounded_rectangle"
                    android:elevation="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_info_text_achievements"
                    app:layout_constraintEnd_toStartOf="@id/profile_info_achievement_hundred_donated"
                    app:layout_constraintStart_toEndOf="@id/profile_info_achievement_one_year">
                    <ImageView
                        android:id="@+id/profile_info_achievement_ten_donations_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/achievement_ten_donations" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="10 donacija"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_info_achievement_hundred_donated"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/white_rounded_rectangle"
                    android:elevation="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_info_text_achievements"
                    app:layout_constraintEnd_toStartOf="@id/profile_info_achievement_account_created"
                    app:layout_constraintStart_toEndOf="@id/profile_info_achievement_ten_donations">
                    <ImageView
                        android:id="@+id/profile_info_achievement_hundred_donated_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/achievement_hundred_donated" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="100€ donirano"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_info_achievement_account_created"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/white_rounded_rectangle"
                    android:elevation="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_info_text_achievements"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:id="@+id/profile_info_achievement_account_created_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/achievement_account_created" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Nalog kreiran"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/profile_info_text_about_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O MENI"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#9098A3"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_info_achievement_one_year"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_info_text_about_me_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum. consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
                    android:textSize="16sp"
                    android:textColor="#31343D"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="20dp"
                    android:background="@drawable/white_rounded_rectangle"
                    android:foreground="?attr/selectableItemBackground"
                    android:clipToOutline="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_info_text_about_me"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_recyclerview_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/profile_text_info"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_recyclerview_rewards"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/profile_text_info"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>