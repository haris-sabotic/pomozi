<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_swipe_refresh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_header_text_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomozi#"
            android:textColor="@color/gray_text_2"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/profile_header_text_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/red_on_cool_blue_gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/profile_header_text_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_photo_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_header_text_screen">
            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/black"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/profile_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_photo_parent" />

        <TextView
            android:id="@+id/profile_text_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#00B3FF"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_text_name" />

        <TextView
            android:id="@+id/profile_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMACIJE"
            android:textColor="@color/red_on_cool_blue_gray"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile_text_activity"
            app:layout_constraintTop_toBottomOf="@id/profile_text_edit_profile" />

        <TextView
            android:id="@+id/profile_text_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AKTIVNOST"
            android:textColor="@color/gray_text_3"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/profile_text_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_text_edit_profile" />

        <ScrollView
            android:id="@+id/profile_scrollview_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile_text_info"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_info_money_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="30dp"
                    android:background="@drawable/profile_card_rounded_more"
                    >
                    <TextView
                        android:id="@+id/profile_info_money_text_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="@color/red_on_cool_blue_gray"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/profile_info_money_text_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginStart="15dp"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/profile_info_money_text_donated"
                        app:layout_constraintStart_toEndOf="@id/profile_info_money_text_dollar" />

                    <TextView
                        android:id="@+id/profile_info_money_text_donated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donirano"
                        android:textColor="#9098A3"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginStart="15dp"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintTop_toBottomOf="@id/profile_info_money_text_amount"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/profile_info_money_text_dollar" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_info_about_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:paddingVertical="30dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/profile_card_rounded_less"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="30dp"
                    >
                    <View
                        android:id="@+id/profile_info_about_clickable_area"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/profile_info_about_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O MENI"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/profile_info_about_text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_info_about_text_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_info_contact_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:clipToPadding="false"
                    android:paddingVertical="30dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/profile_card_rounded_less"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="30dp"
                    >
                    <TextView
                        android:id="@+id/profile_info_contact_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KONTAKT INFORMACIJE"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <View
                        android:id="@+id/profile_info_contact_phone_clickable_area"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="-5dp"
                        app:layout_constraintTop_toTopOf="@id/profile_info_contact_img_phone"
                        app:layout_constraintBottom_toBottomOf="@id/profile_info_contact_img_phone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/profile_info_contact_img_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_info_contact_text_title" />

                    <TextView
                        android:id="@+id/profile_info_contact_text_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="@id/profile_info_contact_img_phone"
                        app:layout_constraintBottom_toBottomOf="@id/profile_info_contact_img_phone"
                        app:layout_constraintStart_toEndOf="@id/profile_info_contact_img_phone" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_recyclerview_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/profile_text_info"
            app:layout_constraintBottom_toBottomOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>