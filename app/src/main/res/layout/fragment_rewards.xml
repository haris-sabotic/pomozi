<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rewards_swipe_refresh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rewards.RewardsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rewards_header_text_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomozi#"
            android:textColor="@color/gray_text_2"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/rewards_header_text_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nagrade"
            android:textColor="@color/red_on_cool_blue_gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/rewards_header_text_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/rewards_header_text_app"
            app:layout_constraintBottom_toBottomOf="@id/rewards_header_text_screen"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/rewards_header_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/black"
                android:background="@color/white"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rewards_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Iskoristite vaše poene!"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/red_on_cool_blue_gray"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/rewards_edittext_search"
            app:layout_constraintEnd_toEndOf="@id/rewards_edittext_search"
            app:layout_constraintTop_toBottomOf="@id/rewards_header_text_screen" />

        <EditText
            android:id="@+id/rewards_edittext_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:textColor="@color/cool_blue_gray"
            android:textColorHint="@color/input_text_color"
            android:textSize="14sp"
            android:hint="Pretražite nagrade"
            android:inputType="text"
            android:drawableStart="@drawable/search"
            android:drawablePadding="15dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/rewards_text_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lista nagrada"
            android:textColor="#31343D"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="@id/rewards_edittext_search"
            app:layout_constraintEnd_toStartOf="@id/rewards_text_points_parent"
            app:layout_constraintBottom_toBottomOf="@id/rewards_text_points_parent"
            app:layout_constraintTop_toTopOf="@id/rewards_text_points_parent" />

        <LinearLayout
            android:id="@+id/rewards_text_points_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/red_rounded_rectangle_cutoff_right"
            android:elevation="10dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rewards_edittext_search">
            <TextView
                android:id="@+id/rewards_text_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:src="@drawable/points" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rewards_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="310dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/rewards_text_points_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>